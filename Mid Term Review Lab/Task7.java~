//Task-7

import java.util.Scanner;

public class Task7{
  public static void main(String[]args){
    Scanner sc = new Scanner(System.in);
    
    int n = sc.nextInt();
    
    int sum1=3;
    int diff1=4;
    int sum2=-5;
    int diff2=-4;
    
    if(n%2!=0){
      int i=1;
      while(i<=n){
        sum1+=diff1;
        i++;
      }
      
      int x=1;
      while(x<=(n-1)){
        sum2-=diff2;
        x++;
      }
    }else{
      int i=1;
      while(i<=n){
        sum1+=diff1;
        i++;
      }
      
      int x=1;
      while(x<=n){
        sum2-=diff2;
        x++;
      }
    }
    System.out.println(sum1+sum2);
  }
}