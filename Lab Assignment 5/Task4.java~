import java.util.Scanner;

public class Task4{
  public static void main(String[]args){
    Scanner sc = new Scanner(System.in);
    
    int n = sc.nextInt();
    int sum = 0;
    
    for(int i=1; i<=n; i++){
      int x = sc.nextInt();
      int y = sc.nextInt();
      
      for(int j=1; j<=y; j++){
        if(x%2!=0){
          x++;
          sum+=2;
        }else{
          sum+=2;
        }
      }
    }
    System.out.println(sum);
  }
}